<mvc:View controllerName="zstd.zstd_log.controller.logview" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<FlexBox alignItems="Center" height="4rem" justifyContent="Center">
						<Text text="File Name :" class="sapUiSmallMarginEnd"></Text>
						<u:FileUploader id="fileUploader" name="file" uploadUrl="https://sjfidoc-dot-stdtest2-217119.appspot.com/fileService/uploadFile/" width="40rem" tooltip="Upload your file to the local server"
							uploadComplete="handleUploadComplete"/>
						<Button text="Upload File" press="handleUploadPress" class="sapUiSmallMarginBegin"/>
					</FlexBox>
					<Table id="idTableFileList" items="{oModelFileList>/files}" growing="true" growingThreshold="100">
						<headerToolbar>
							<OverflowToolbar id="otbSubheader">
								<Title text="Lisf of Available files" level="H2"/>
								<ToolbarSpacer/>
								<Button text="Maintain Field Mapping" press="onMapFields" type="Accept"/>
								<!--<Button id="addButton" text="Add" type="Emphasized"-->
								<!--	press="onAdd" />-->
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column >
								<Text text="File Name"/>
							</Column>
							<Column >
								<Text text="Date and Time"/>
							</Column>
							<Column >
								<Text text="Process"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{oModelFileList>fileName}"/>
									<Text text="{oModelFileList>createDate}"/>
									<Button text="Process" press="onProcess"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>