<mvc:View controllerName="zstd.zstd_log.controller.logview" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>Mapping}" showNavButton="true" navButtonPress="onNavBack" class="sapUiNoContentPadding">
				<content>
					<l:Splitter height="500px">
						<Table id="idTableRecordType" 
						items="{
												path: 'oModelRecTypes>/recType',
												templateShareable:true,
												sorter: { path: 'seqNo' }
											}"
						growing="true" growingThreshold="100" mode="SingleSelectMaster"
						selectionChange="onTypeSelectionChange" 
						class="sapUiNoContentPadding">
							<layoutData><l:SplitterLayoutData size="300px" class="sapUiNoContentPadding"/></layoutData>
							<headerToolbar>
								<OverflowToolbar id="otbRecordType">
									<Title text="Record Types"/>
									<ToolbarSpacer/>
									<Button id="addType" text="Add Type" type="Emphasized" press="addType"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column class="sapUiNoContentPadding" >
									<Text text="Record Type" class="sapUiNoContentPadding"/>
								</Column>
								<Column class="sapUiNoContentPadding" >
									<Text text="Description" class="sapUiNoContentPadding"/>
								</Column>
							</columns>
							<items class="sapUiNoContentPadding">
								<ColumnListItem class="sapUiNoContentPadding">
									<cells class="sapUiNoContentPadding" >
										<Input value="{oModelRecTypes>recType}" class="sapUiNoMargin sapUiNoContentPadding"/>
										<Input value="{oModelRecTypes>recDesc}" class="sapUiNoMargin"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<Table id="idTableFieldMapping" items="{oModelrecFields>/recFields}" growing="true" growingThreshold="100" mode="SingleSelectMaster">
							<layoutData><l:SplitterLayoutData size="auto"/></layoutData>
							<headerToolbar>
								<OverflowToolbar id="otbSubFieldMapping">
									<Title text="Field Definition"/>
									<ToolbarSpacer/>
									<Button id="addFields" text="Add Field" type="Emphasized" press="addField" />
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column >
									<Text text="Record Type"/>
								</Column>
								<Column >
									<Text text="Sequence Number"/>
								</Column>
								<Column >
									<Text text="Field Name"/>
								</Column>
								<Column >
									<Text text="Delete"/>
								</Column>

							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{oModelrecFields>recType}" class="sapUiNoMargin" />
										<Input value="{oModelrecFields>seqNo}" class="sapUiNoMargin"/>
										<Select
											forceSelection="false"
											selectedKey="{oModelrecFields>fldName}"
											items="{
												path: 'oModelDropdownFields>/fields',
												templateShareable:true,
												sorter: { path: 'value' }
											}">
											<core:Item key="{oModelDropdownFields>key}" text="{oModelDropdownFields>value}" />
										</Select>										
										<CheckBox text="" selected="{oModelrecFields>delInd}"></CheckBox>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</l:Splitter>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="Save Mapping" press="onSaveMapping" type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>